<p><%= anime_item.content %></p>
<%= link_to "Delete", anime_list_anime_item_path(@anime_list, anime_item.id), method: :delete, data: { confirm: "Are you sure?"} %>

<%= link_to "Mark as Complete", complete_anime_list_anime_item_path(@anime_list, anime_item.id), method: :patch %>

<div class="row clearfix">
  <% if anime_item.completed? %>
  <div class="complete">
    <%= link_to "Mark as Complete", complete_anime_list_anime_item_path(@anime_list, anime_item.id), method: :patch %>
  </div>
  <div class="anime_item">
    <p style="opacity: 0.4;"><strike><%= anime_item.content %></strike></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", anime_list_anime_item_path(@anime_list, anime_item.id), method: :delete, data: { confirm: "Are you sure?"} %>
  </div>
  <% else %>
   <div class="complete">
      <%= link_to "Mark as Complete", complete_anime_list_anime_item_path(@anime_list, anime_item.id), method: :patch %>
    </div>
    <div class="anime_item">
      <p><%= anime_item.content %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", anime_list_anime_item_path(@anime_list, anime_item.id), method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
    <% end %>
</div>
