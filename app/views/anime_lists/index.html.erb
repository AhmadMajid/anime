<p id="notice"><%= notice %></p>

<h1>Anime Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anime_lists.each do |anime_list| %>
      <tr>
        <td><%= anime_list.title %></td>
        <td><%= anime_list.description %></td>
        <td><%= link_to 'Show', anime_list %></td>
        <td><%= link_to 'Edit', edit_anime_list_path(anime_list) %></td>
        <td><%= link_to 'Destroy', anime_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

